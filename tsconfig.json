{
  "extends": "@pega/tsconfig/index.json",
  "include": ["./**/*", ".storybook/**/*"],
  "exclude": [
    "**/*.mjs",
    "dist",
    "**/*.test.tsx",
    "node_modules",
    "lib",
    "storybook-static",
    "Pega_UIGallery",
    "store"
  ],
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "importsNotUsedAsValues": "remove",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@pega/pcore-pconnect-typedefs/*": ["node_modules/@pega/pcore-pconnect-typedefs/*"]
    }
  }
}
